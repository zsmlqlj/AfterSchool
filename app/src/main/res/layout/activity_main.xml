<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


        <FrameLayout
            android:id="@+id/threeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_corner_card"
        >
        <RadioGroup
            android:id="@+id/bottomRadiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <RadioButton
                android:id="@+id/homerBtn"
                style="@style/BottomBarIconTheme"
                android:checked="true"
                android:text="@string/home_bottom_text"/>
            <RadioButton
                android:id="@+id/fastclassrBtn"
                style="@style/BottomBarIconTheme"
                android:text="@string/falsh_class_bottom_text"/>
            <RadioButton
                android:id="@+id/myrBtn"
                style="@style/BottomBarIconTheme"
                android:text="@string/setting_bottom_text"
                />
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>

