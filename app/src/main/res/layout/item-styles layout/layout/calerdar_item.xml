<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/calendar_myday"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#518bf1"
            />
        <TextView
            android:id="@+id/calendar_myweek"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/calendar_myday"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="#518bf1"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/calendar_myyear"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            />
        <!--课表展示项-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/curriculumRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/calendar_myday"
            android:layout_marginStart="16dp"
            android:nestedScrollingEnabled="false"
            android:layout_below="@+id/calendar_myyear"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>